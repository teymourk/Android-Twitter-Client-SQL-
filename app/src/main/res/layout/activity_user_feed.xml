<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Followers"
        android:layout_toRightOf="@+id/Followers"
        android:layout_toEndOf="@+id/Followers"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="55dp"
        android:id="@+id/Following" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="70dp"
        android:id="@+id/Followers"
        android:layout_below="@+id/profileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bio"
        android:layout_below="@+id/profileImage"
        android:layout_alignLeft="@+id/Followers"
        android:layout_alignStart="@+id/Followers"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Details"
        android:layout_alignTop="@+id/profileImage"
        android:layout_toRightOf="@+id/profileImage"
        android:layout_toEndOf="@+id/profileImage"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:id="@+id/Tweet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:layout_alignBottom="@+id/Tweet"
        android:layout_alignLeft="@+id/Followers"
        android:layout_alignStart="@+id/Followers"
        android:id="@+id/tweetField"
        android:layout_toLeftOf="@+id/Tweet"
        android:layout_toStartOf="@+id/Tweet"
        android:hint="Enter Tweet Here"
        android:backgroundTint="@android:color/holo_blue_light" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tweetField"
        android:id="@+id/tweets_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Edit Bio"
        android:layout_height="wrap_content"
        android:id="@+id/Edit"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/Following"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat_long"
        android:layout_marginTop="85dp"
        android:layout_alignLeft="@+id/Bio"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresh"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/logout"
        android:layout_toStartOf="@+id/logout"
        android:minHeight="10dp"
        android:minWidth="10dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
